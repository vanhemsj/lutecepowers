{
  "pluginName": "taskmanager",
  "pluginDescription": {
    "en": "Task management plugin for Lutece",
    "fr": "Plugin de gestion des tâches pour Lutece"
  },
  "packageBase": "fr.paris.lutece.plugins.taskmanager",
  "features": {
    "xpage": {
      "enabled": true,
      "name": "mytasks",
      "title": {
        "en": "My Tasks",
        "fr": "Mes tâches"
      }
    },
    "cache": {
      "enabled": true
    },
    "rbac": {
      "enabled": true,
      "permissions": ["CREATE", "MODIFY", "DELETE", "VIEW"]
    },
    "site": {
      "enabled": true,
      "name": "site-taskmanager",
      "description": "Test site for taskmanager plugin",
      "database": {
        "name": "lutece_taskmanager",
        "user": "root",
        "password": "lutece",
        "host": "localhost",
        "port": 3306
      }
    },
    "workflow": {
      "enabled": true
    }
  },
  "entities": [
    {
      "name": "Project",
      "label": {
        "en": "Project",
        "fr": "Projet"
      },
      "tableName": "taskmanager_project",
      "fields": [
        {
          "name": "name",
          "type": "string",
          "required": true,
          "label": {
            "en": "Name",
            "fr": "Nom"
          }
        },
        {
          "name": "description",
          "type": "longtext",
          "required": false,
          "label": {
            "en": "Description",
            "fr": "Description"
          }
        },
        {
          "name": "startDate",
          "type": "date",
          "required": false,
          "label": {
            "en": "Start date",
            "fr": "Date de début"
          }
        },
        {
          "name": "endDate",
          "type": "date",
          "required": false,
          "label": {
            "en": "End date",
            "fr": "Date de fin"
          }
        },
        {
          "name": "active",
          "type": "boolean",
          "required": true,
          "label": {
            "en": "Active",
            "fr": "Actif"
          }
        }
      ]
    },
    {
      "name": "Task",
      "label": {
        "en": "Task",
        "fr": "Tâche"
      },
      "tableName": "taskmanager_task",
      "parentEntity": "Project",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "required": true,
          "label": {
            "en": "Title",
            "fr": "Titre"
          }
        },
        {
          "name": "description",
          "type": "longtext",
          "required": false,
          "label": {
            "en": "Description",
            "fr": "Description"
          }
        },
        {
          "name": "dueDate",
          "type": "date",
          "required": false,
          "label": {
            "en": "Due date",
            "fr": "Date d'échéance"
          }
        },
        {
          "name": "priority",
          "type": "int",
          "required": false,
          "label": {
            "en": "Priority",
            "fr": "Priorité"
          }
        },
        {
          "name": "completed",
          "type": "boolean",
          "required": true,
          "label": {
            "en": "Completed",
            "fr": "Terminée"
          }
        },
        {
          "name": "estimatedHours",
          "type": "double",
          "required": false,
          "label": {
            "en": "Estimated hours",
            "fr": "Heures estimées"
          }
        }
      ]
    },
    {
      "name": "Comment",
      "label": {
        "en": "Comment",
        "fr": "Commentaire"
      },
      "tableName": "taskmanager_comment",
      "parentEntity": "Task",
      "fields": [
        {
          "name": "content",
          "type": "longtext",
          "required": true,
          "label": {
            "en": "Content",
            "fr": "Contenu"
          }
        },
        {
          "name": "author",
          "type": "string",
          "required": true,
          "label": {
            "en": "Author",
            "fr": "Auteur"
          }
        },
        {
          "name": "creationDate",
          "type": "timestamp",
          "required": true,
          "label": {
            "en": "Creation date",
            "fr": "Date de création"
          }
        }
      ]
    }
  ]
}
